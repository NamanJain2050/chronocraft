        <RelativeLayout
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <ImageView
                android:id="@+id/strap_1"
                android:layout_width="160dp"
                android:layout_height="200dp"
                android:src="@drawable/strap_1"/>

            <TextView
                android:id="@+id/strap_1_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Leather Classic"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/strap_1"/>

            <TextView
                android:id="@+id/strap_1_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs. 400"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/strap_1_text"/>

        </RelativeLayout>

