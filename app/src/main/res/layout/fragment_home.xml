        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <ImageButton
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:src="@drawable/ic_history_black_24dp"
            android:id="@+id/imgbtn5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order History"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/imgbtn5"/>

    </RelativeLayout> -->

    <RelativeLayout
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <ImageButton
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:src="@drawable/ic_info_black_24dp"
            android:id="@+id/imgbtn6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Information"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/imgbtn6"/>

    </RelativeLayout>
        <RelativeLayout
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <ImageButton
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:src="@drawable/ic_video_library_black_24dp"
                android:id="@+id/imgbtn7" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Watch our video"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/imgbtn7"/>

        </RelativeLayout>

</GridLayout>
</ScrollView>
