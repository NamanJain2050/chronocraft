<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_scroll_view_dial"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:columnCount="2">


        <RelativeLayout
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <ImageView
                android:id="@+id/dial_1"
                android:layout_width="160dp"
                android:layout_height="200dp"
                android:src="@drawable/dial_1"/>

            <TextView
                android:id="@+id/dial_1_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Barcelona"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/dial_1"/>

            <TextView
                android:id="@+id/dial_1_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs. 550"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/dial_1_text"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <ImageView
                android:id="@+id/dial_2"
                android:layout_width="160dp"
                android:layout_height="200dp"
                android:src="@drawable/dial_2"/>

            <TextView
                android:id="@+id/dial_2_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Barcelona"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/dial_2"/>

            <TextView
                android:id="@+id/dial_2_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs. 550"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/dial_2_text"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <ImageView
                android:id="@+id/dial_3"
                android:layout_width="160dp"
                android:layout_height="200dp"
                android:src="@drawable/dial_3"/>

            <TextView
                android:id="@+id/dial_3_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paris"
                android:textStyle="bold"
