<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_scroll_view_case"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:columnCount="2">


        <RelativeLayout
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <ImageView
                android:id="@+id/case_1"
                android:layout_width="160dp"
                android:layout_height="200dp"
                android:src="@drawable/case_1"/>

            <TextView
                android:id="@+id/case_1_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Infinity"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/case_1"/>

            <TextView
                android:id="@+id/case_1_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs. 100"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/case_1_text"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <ImageView
                android:id="@+id/case_2"
                android:layout_width="160dp"
                android:layout_height="200dp"
                android:src="@drawable/case_2"/>

            <TextView
                android:id="@+id/case_2_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Infinity Black"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/case_2"/>

            <TextView
                android:id="@+id/case_2_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs. 100"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/case_2_text"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <ImageView
                android:id="@+id/case_3"
                android:layout_width="160dp"
                android:layout_height="200dp"
                android:src="@drawable/case_3"/>

            <TextView
                android:id="@+id/case_3_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Infinity Rose Gold"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/case_3"/>

            <TextView
                android:id="@+id/case_3_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs. 100"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/case_3_text"/>

        </RelativeLayout>


    </GridLayout>
</ScrollView>